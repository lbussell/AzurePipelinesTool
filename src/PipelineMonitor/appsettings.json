{
  "NLog": {
    "variables": {
      "logDirectory": "${specialfolder:folder=LocalApplicationData}/PipelineMonitor/${environment:DOTNET_ENVIRONMENT:whenEmpty=Production}/logs"
    },
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "${var:logDirectory}/run-${shortdate}.log"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
}
